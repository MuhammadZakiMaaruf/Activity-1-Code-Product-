// C++ code
//
#include <Adafruit_LiquidCrystal.h>

int i = 0;

int j = 0;

int Phase = 0;

Adafruit_LiquidCrystal lcd_1(0);

void setup()
{
  pinMode(7, OUTPUT);
  pinMode(13, INPUT);
  pinMode(5, OUTPUT);
  pinMode(11, INPUT);
  pinMode(4, OUTPUT);
  pinMode(10, INPUT);
  pinMode(6, OUTPUT);
  pinMode(12, INPUT);
  lcd_1.begin(16, 2);

  while (!(Phase == 1)) {
    digitalWrite(7, HIGH);
    if (digitalRead(13) == HIGH) {
      Phase += 1;
    }
  }
  digitalWrite(7, LOW);
  Phase = 0;
  while (!(Phase == 1)) {
    digitalWrite(5, HIGH);
    if (digitalRead(11) == HIGH) {
      Phase += 1;
    }
  }
  digitalWrite(5, LOW);
  Phase = 0;
  while (!(Phase == 1)) {
    digitalWrite(4, HIGH);
    if (digitalRead(10) == HIGH) {
      Phase += 1;
    }
  }
  digitalWrite(4, LOW);
  Phase = 0;
  while (!(Phase == 1)) {
    digitalWrite(6, HIGH);
    if (digitalRead(12) == HIGH) {
      Phase += 1;
    }
  }
  digitalWrite(6, LOW);
  Phase = 0;
  while (!(Phase == 1)) {
    digitalWrite(7, HIGH);
    if (digitalRead(13) == HIGH) {
      Phase += 1;
    }
  }
  digitalWrite(7, LOW);
  Phase = 0;
  while (!(Phase == 1)) {
    digitalWrite(7, HIGH);
    digitalWrite(5, HIGH);
    if (digitalRead(13) == HIGH && digitalRead(11) == HIGH) {
      Phase += 1;
    }
  }
  digitalWrite(5, LOW);
  digitalWrite(7, LOW);
  Phase = 0;
  while (!(Phase == 1)) {
    digitalWrite(5, HIGH);
    if (digitalRead(11) == HIGH && (digitalRead(10) == HIGH && digitalRead(12) == HIGH)) {
      Phase += 1;
    }
  }
  digitalWrite(4, LOW);
  digitalWrite(6, LOW);
  digitalWrite(5, LOW);
  Phase = 0;
  Phase = 0;
  lcd_1.print("hello world");
}

void loop()
{
  delay(10); // Delay a little bit to improve simulation performance
}
